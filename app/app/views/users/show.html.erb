<% provide(:title, @user.name) %>
<div class="container users-container">
  <div class="user-info">
    <%= image_tag @user.icon_path , class:'icon' %>
    <h2><%= @user.name %></h2>
    <p class="twitter-uid">
      <i class="fab fa-twitter"></i>
      @<%= @user.twitter_id %>
    </p>
    <p class="slides-size">
      <%= @user.slides.count %> slides
    </p>
  </div>
  <div class="slides" id="user-slides">
    <%= render partial: 'partial/slide', collection: @user.slides %>
  </div>
</div>